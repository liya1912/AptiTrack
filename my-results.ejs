<!-- views/student/my-results.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Results - AptiTrack</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar">
    <div class="nav-brand">AptiTrack</div>
    <div class="nav-links">
      <a href="/student/dashboard">Dashboard</a>
      <a href="/student/available-tests">Tests</a>
      <a href="/student/my-results" class="active">My Results</a>
      <a href="/logout">Logout</a>
    </div>
  </nav>

  <div class="container">
    <div class="page-header">
      <h1>My Test Results</h1>
      <p>View your performance history</p>
    </div>

    <% if (results.length === 0) { %>
      <div class="empty-state">
        <h3>No results yet</h3>
        <p>You haven't completed any tests yet.</p>
        <a href="/student/available-tests" class="btn btn-primary">Take a Test</a>
      </div>
    <% } else { %>
      <div class="results-list">
        <% results.forEach(result => { %>
          <div class="result-card">
            <div class="result-card-header">
              <div>
                <h3><%= result.test.title %></h3>
                <p class="result-date">
                  Submitted: <%= new Date(result.submittedAt).toLocaleDateString('en-IN', { 
                    year: 'numeric', 
                    month: 'short', 
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                  }) %>
                </p>
              </div>
              <div class="result-badge <%= result.isPassed ? 'passed' : 'failed' %>">
                <%= result.isPassed ? 'Passed' : 'Failed' %>
              </div>
            </div>

            <div class="result-card-body">
              <div class="result-stats">
                <div class="stat">
                  <div class="stat-label">Score</div>
                  <div class="stat-value"><%= result.percentage.toFixed(0) %>%</div>
                </div>
                <div class="stat">
                  <div class="stat-label">Marks</div>
                  <div class="stat-value"><%= result.marksObtained %>/<%= result.totalMarks %></div>
                </div>
                <div class="stat">
                  <div class="stat-label">Correct</div>
                  <div class="stat-value correct"><%= result.answers.filter(a => a.isCorrect).length %></div>
                </div>
                <div class="stat">
                  <div class="stat-label">Time</div>
                  <div class="stat-value"><%= result.timeTaken %> min</div>
                </div>
              </div>

              <div class="result-actions">
                <a href="/student/test-result/<%= result._id %>" class="btn btn-primary">
                  View Details
                </a>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>

  <style>
    .results-list {
      display: flex;
      flex-direction: column;
      gap: 20px;
      margin-top: 24px;
    }

    .result-card {
      background: white;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      overflow: hidden;
    }

    .result-card-header {
      padding: 20px 24px;
      border-bottom: 1px solid #f0f0f0;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .result-card-header h3 {
      margin: 0 0 4px 0;
      color: #333;
    }

    .result-date {
      color: #666;
      font-size: 0.9rem;
      margin: 0;
    }

    .result-badge {
      padding: 6px 16px;
      border-radius: 20px;
      font-weight: 600;
      font-size: 0.85rem;
      text-transform: uppercase;
    }

    .result-badge.passed {
      background: #e8f5e9;
      color: #2e7d32;
    }

    .result-badge.failed {
      background: #ffebee;
      color: #c62828;
    }

    .result-card-body {
      padding: 24px;
    }

    .result-stats {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
      gap: 20px;
      margin-bottom: 20px;
    }

    .stat {
      text-align: center;
      padding: 16px;
      background: #f8f9fa;
      border-radius: 8px;
    }

    .stat-label {
      color: #666;
      font-size: 0.85rem;
      margin-bottom: 8px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .stat-value {
      font-size: 1.5rem;
      font-weight: 700;
      color: #333;
    }

    .stat-value.correct {
      color: #4caf50;
    }

    .result-actions {
      display: flex;
      justify-content: flex-end;
      padding-top: 16px;
      border-top: 1px solid #f0f0f0;
    }
  </style>
</body>
</html>