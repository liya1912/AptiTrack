<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Available Tests - AptiTrack</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar">
    <div class="nav-brand">AptiTrack</div>
    <div class="nav-links">
      <a href="/student/dashboard">Dashboard</a>
      <a href="/student/available-tests" class="active">Tests</a>
      <!--<a href="/logout">Logout</a>-->
      <a href="/auth/logout">Logout</a>

    </div>
  </nav>

  <div class="container">
    <div class="page-header">
      <h1>Available Tests</h1>
      <p>Select a test to begin your assessment</p>
    </div>

    <% if (tests.length === 0) { %>
      <div class="empty-state">
        <h3>No tests available</h3>
        <p>There are currently no active tests. Please check back later.</p>
      </div>
    <% } else { %>
      <div class="tests-grid">
        <% tests.forEach(test => { %>
          <div class="test-card">
            <div class="test-header">
              <h3><%= test.title %></h3>
              <% if (attemptedTestIds.includes(test._id.toString())) { %>
                <span class="badge badge-success">Completed</span>
              <% } else { %>
                <span class="badge badge-primary">Available</span>
              <% } %>
            </div>
            
            <div class="test-category">
              <span class="category-badge"><%= test.category %></span>
            </div>

            <div class="test-details">
              <div class="detail-item">
                <strong>Questions:</strong> <%= test.questions.length %>
              </div>
              <div class="detail-item">
                <strong>Duration:</strong> <%= test.duration %> minutes
              </div>
              <div class="detail-item">
                <strong>Total Marks:</strong> <%= test.totalMarks %>
              </div>
              <div class="detail-item">
                <strong>Passing Marks:</strong> <%= test.passingMarks %>
              </div>
            </div>

            <% if (test.description) { %>
              <p class="test-description"><%= test.description %></p>
            <% } %>

            <div class="test-actions">
              <% if (attemptedTestIds.includes(test._id.toString())) { %>
                <button class="btn btn-secondary" disabled>Already Attempted</button>
              <% } else { %>
                <a href="/student/take-test/<%= test._id %>" class="btn btn-primary">
                  Start Test
                </a>
              <% } %>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>

